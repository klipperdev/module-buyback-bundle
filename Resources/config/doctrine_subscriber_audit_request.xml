<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Audit Request Listener -->
        <service id="Klipper\Module\BuybackBundle\Doctrine\Listener\AuditRequestSubscriber">
            <tag name="doctrine.event_subscriber" />
            <argument type="service" id="klipper_doctrine_choice.manager"/>
            <argument type="service" id="klipper_buyback.generator.audit_request_reference"/>
            <argument type="service" id="translator"/>
            <argument type="service" id="klipper_resource.object_factory"/>
            <argument type="collection"/>
            <argument type="collection"/>
        </service>

        <service id="klipper_buyback.generator.audit_request_reference"
                 class="Klipper\Component\CodeGenerator\CodeGenerator"
        >
            <argument>8</argument>
            <argument>8</argument>
            <argument>0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZ</argument>
        </service>

        <!-- Audit Request Item Listener -->
        <service id="Klipper\Module\BuybackBundle\Doctrine\Listener\AuditRequestItemSubscriber">
            <tag name="doctrine.event_subscriber" />
        </service>
    </services>
</container>
